<divclass= "row">
    <h1>Reddit Scraper</h1>
    <a class="btn btn-primary new-scrape">Get Articles</a>
</div>
<div class="modal " id="exampleModal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Comments</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="comment-title-box">Give your comment a title.</label>
                        <textarea class="form-control" id="comment-title-box" rows="1"></textarea>
                        <label for="comment-body-box">Write Your comment.</label>
                        <textarea class="form-control" id="comment-body-box" rows="3"></textarea>
                    </div>
                    <div class="comment-group">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary submit-comment-button">Post</button>
                </div>
            </div>
        </div>
    </div>
<div id="articleBlock" class="clearfix">
    
    <div id="listBlock">
        {{#each articles}}
        {{> articles/article}}
        {{/each}}

    </div>
</div>
